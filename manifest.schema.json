{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://raw.githubusercontent.com/tera-alkahest/alkahest-registry/master/schema.json",
    "title": "Alkahest Registry Manifest",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "description": "Name of the package.",
                "type": "string"
            },
            "description": {
                "description": "Brief description of the package.",
                "type": "string"
            },
            "license": {
                "description": "SPDX license identifier of the package.",
                "type": "string"
            },
            "owner": {
                "description": "GitHub username of the package owner.",
                "type": "string"
            },
            "repository": {
                "description": "GitHub repository name (under owner) for the package.",
                "type": "string"
            }
        },
        "required": [
            "name",
            "description",
            "license",
            "owner",
            "repository"
        ]
    }
}
