{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://raw.githubusercontent.com/tera-alkahest/alkahest-registry/master/schema.json",
    "title": "Alkahest Registry Manifest",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "type": {
                "enum": [
                    "csharp",
                    "python"
                ]
            },
            "name": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "license": {
                "type": "string"
            },
            "owner": {
                "type": "string"
            },
            "repository": {
                "type": "string"
            }
        },
        "required": [
            "type",
            "name",
            "description",
            "license",
            "owner",
            "repository"
        ]
    }
}
